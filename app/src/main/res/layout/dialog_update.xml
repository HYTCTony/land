<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_update"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/tv_update_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新内容："
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gainsboro_button"
                    android:gravity="center"
                    android:text="暂不"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_button"
                    android:gravity="center"
                    android:text="立即更新"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="235dp"
                android:layout_height="195dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_update" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="1.0.1版本闪亮登场，请下载体验"
                android:textColor="@color/subject_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>